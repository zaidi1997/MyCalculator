<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="#A9A9A9">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="50sp"
            android:text="0"
            android:id="@+id/output"
            android:layout_marginRight="20dp"
            android:layout_margin="50dp"
            android:layout_gravity="end"
             android:layout_weight="0.4"
            android:textColor="#FFFFFF"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
             android:background="#FFFFFF">

        <TableRow
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btnAc"
                    android:onClick="btnOpOnClick"
                    android:text="AC"
                    android:layout_span="3"/>

            <Button
                    android:id="@+id/btnDivide"
                    android:onClick="btnOpOnClick"
                    android:text="/"
                    android:background="#E86100"/>
        </TableRow>

        <TableRow
                android:id="@+id/row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btn7"
                    android:onClick="btnOnClick"
                    android:text="7" android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/btn8"
                    android:onClick="btnOnClick"
                    android:text="8"/>
            <Button
                    android:id="@+id/btn9"
                    android:onClick="btnOnClick"
                    android:text="9"/>
            <Button
                    android:id="@+id/btnMultiply"
                    android:onClick="btnOpOnClick"
                    android:text="*"
                    android:background="#E86100"/>
        </TableRow>

        <TableRow
                android:id="@+id/row3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/btn4"
                    android:onClick="btnOnClick"
                    android:text="4" android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/btn5"
                    android:onClick="btnOnClick"
                    android:text="5"/>
            <Button
                    android:id="@+id/btn6"
                    android:onClick="btnOnClick"
                    android:text="6"/>
            <Button
                    android:id="@+id/btnMinus"
                    android:onClick="btnOpOnClick"
                    android:text="-"
                    android:background="#E86100"/>
        </TableRow>

        <TableRow
                android:id="@+id/row4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/btn1"
                    android:onClick="btnOnClick"
                    android:text="1" android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/btn2"
                    android:onClick="btnOnClick"
                    android:text="2"/>
            <Button
                    android:id="@+id/btn3"
                    android:onClick="btnOnClick"
                    android:text="3"/>
            <Button
                    android:id="@+id/btnPlus"
                    android:onClick="btnOpOnClick"
                    android:text="+"
                    android:background="#E86100" android:layout_width="wrap_content"/>
        </TableRow>

        <TableRow
                android:id="@+id/row5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/btn0"
                    android:onClick="btnOnClick"
                    android:text="0"
                    android:layout_span="2"/>
            <Button
                    android:id="@+id/btnDecimal"
                    android:onClick="btnOnClick"
                    android:text="."/>

            <Button
                    android:id="@+id/btnEquals"
                    android:onClick="btnEqualOnClick"
                    android:text="="
                    android:background="#E86100"/>
        </TableRow>


    </TableLayout>

</LinearLayout>